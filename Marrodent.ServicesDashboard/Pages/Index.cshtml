@page
@model IndexModel

<div>
    <div class="row col-12">
       @if (Model.IisApps != null && Model.IisApps.Any())
       {
           <div class="col-4">
               <p class="display-4">
                   IIS services
               </p>
               <div>
                   @foreach (var app in Model.IisApps)
                   {
                       <div class="card" style="border-color: @app.CardColor; border-width: 2px;">
                           <div class="card-body">
                               <h5 class="card-title">@app.DisplayName</h5>
                               <br/>
                               <p class="card-text"><b>Service name:</b> @app.ServiceName</p>
                               <p class="card-text"><b>Description:</b> @app.Description</p>
                               <p class="card-text"><b>Address:</b>@app.Address</p>
                               <p class="card-text"><b>State:</b> @app.GetState</p>
                               
                               @if (!string.IsNullOrEmpty(app.CorrectLogAddress))
                               {
                                   <button class="btn btn-primary">Logs</button>
                               }
                               
                               <button class="btn btn-success">Reset</button>
                               <button class="btn btn-danger">Stop</button>
                           </div>
                       </div>
                       <br/>
                   }
               </div>
           </div>
       }
       @if (Model.WindowsServiceApps != null && Model.WindowsServiceApps.Any())
       {
       <div class="col-4">
           <p class="display-4">
               Windows services
           </p>
           <div>
               @foreach (var app in Model.WindowsServiceApps)
               {
                   <div class="card" style="border-color: @app.CardColor; border-width: 2px;">
                       <div class="card-body">
                           <h5 class="card-title">@app.DisplayName</h5>
                           <br/>
                           <p class="card-text"><b>Service name:</b> @app.ServiceName</p>
                           <p class="card-text"><b>Description:</b> @app.Description</p>
                           <p class="card-text"><b>Address:</b>@app.Address</p>
                           <p class="card-text"><b>State:</b> @app.GetState</p>
                           
                           @if (!string.IsNullOrEmpty(app.CorrectLogAddress))
                           {
                               <button class="btn btn-primary">Logs</button>
                           }
                           
                           <button class="btn btn-success">Reset</button>
                           <button class="btn btn-danger">Stop</button>
                       </div>
                   </div>
                   <br/>
               }
           </div>
       </div>
   }
       @if (Model.WindowsTaskSchedulerApps != null && Model.WindowsTaskSchedulerApps.Any())
       {
           <div class="col-4">
               <p class="display-4">
                   Scheduler services
               </p>
               <div>
                   @foreach (var app in Model.WindowsTaskSchedulerApps)
                   {
                       <div class="card" style="border-color: @app.CardColor; border-width: 2px;">
                           <div class="card-body">
                               <h5 class="card-title">@app.DisplayName</h5>
                               <br/>
                               <p class="card-text"><b>Service name:</b> @app.ServiceName</p>
                               <p class="card-text"><b>Description:</b> @app.Description</p>
                               <p class="card-text"><b>Address:</b>@app.Address</p>
                               <p class="card-text"><b>State:</b> @app.GetState</p>
                               
                                @if (!string.IsNullOrEmpty(app.CorrectLogAddress))
                                {
                                    <button class="btn btn-primary">Logs</button>
                                }
                           </div>
                       </div>
                       <br/>
                   }
               </div>
           </div>
       }
       }
    </div>
</div>